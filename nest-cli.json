{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/openhab-interface/src",
  "monorepo": true,
  "root": "apps/openhab-interface",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/openhab-interface/tsconfig.app.json",
    "deleteOutDir": true,
    "assets": [
      "**/*.json"
    ],
    "watchAssets": true
  },
  "projects": {
    "openhab-interface": {
      "type": "application",
      "root": "apps/openhab-interface",
      "entryFile": "main",
      "sourceRoot": "apps/openhab-interface/src",
      "compilerOptions": {
        "tsConfigPath": "apps/openhab-interface/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "phoscon-interface": {
      "type": "application",
      "root": "apps/phoscon-interface",
      "entryFile": "main",
      "sourceRoot": "apps/phoscon-interface/src",
      "compilerOptions": {
        "tsConfigPath": "apps/phoscon-interface/tsconfig.app.json"
      }
    }
  }
}